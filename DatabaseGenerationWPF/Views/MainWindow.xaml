<Window
    x:Class="DatabaseGenerationWPF.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:DatabaseGenerationWPF.Views"
    xmlns:prism="http://prismlibrary.com/"
    Title="{Binding Title}"
    prism:ViewModelLocator.AutoWireViewModel="True"
    Icon="/Views/favicon.ico"
    SizeToContent="WidthAndHeight">
    <!--
        WindowState="Maximized" 设置窗口全屏
        SizeToContent="WidthAndHeight" 设置自动跟随内容大小设置窗口大小
    -->
    <Grid Background="#f5f5f5">

        <hc:Watermark
            MinWidth="1200"
            MinHeight="1000"
            FontSize="50"
            FontWeight="Bold"
            Mark=""
            MarkMargin="50,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="1*" MinHeight="500" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>


                <Canvas Grid.Row="0" Height="80">
                    <ToggleButton
                        Width="50"
                        Height="50"
                        Margin="18,16,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        IsChecked="{Binding IsOpen, ElementName=DrawerLeft}">
                        <TextBlock
                            FontFamily="/#iconfont"
                            FontSize="30"
                            Text="&#xe60b;" />
                    </ToggleButton>

                    <!--  时间控件  -->
                    <local:ucDigitalClock
                        Canvas.Right="50"
                        Margin="0,16,0,0"
                        VerticalAlignment="Center" />
                </Canvas>

                <!--  弹窗侧边栏按钮  -->



                <GroupBox
                    Grid.Row="1"
                    Margin="16,0"
                    HorizontalContentAlignment="Left"
                    Style="{StaticResource GroupBoxOriginal}">
                    <GroupBox.Header>
                        <TextBlock
                            Margin="0,10"
                            FontFamily="Agency FB"
                            FontSize="24"
                            Text="SQL Code Template" />
                    </GroupBox.Header>
                    <TextBox
                        x:Name="SqlCodeBox"
                        VerticalContentAlignment="Top"
                        AcceptsReturn="True"
                        FontSize="16"
                        FontWeight="Light"
                        HorizontalScrollBarVisibility="Auto"
                        Text="{Binding File.Sql}"
                        TextChanged="SqlCodeBox_TextChanged"
                        TextWrapping="Wrap"
                        VerticalScrollBarVisibility="Auto" />

                </GroupBox>

                <TextBlock
                    Grid.Row="2"
                    Width="auto"
                    Height="70"
                    Margin="16"
                    HorizontalAlignment="Left"
                    FontFamily="Agency FB"
                    FontSize="20"
                    Foreground="Black">

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Line " />
                        <TextBlock Text="{Binding Record.Row}" />
                        <TextBlock Text=",Word " />
                        <TextBlock Text="{Binding Record.Num}" />
                    </StackPanel>
                </TextBlock>

                <!--  侧边栏  -->
                <hc:Drawer
                    x:Name="DrawerLeft"
                    Closed="DrawerLeft_Closed"
                    Dock="Left"
                    MaskCanClose="False"
                    ShowMask="False"
                    ShowMode="Push">
                    <Border
                        Width="300"
                        Background="{DynamicResource RegionBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Margin="20"
                                HorizontalAlignment="Left"
                                Style="{StaticResource TextBlockTitle}"
                                Text="设置" />

                            <Button
                                Grid.Row="0"
                                HorizontalAlignment="Right"
                                hc:IconElement.Geometry="{StaticResource DeleteFillCircleGeometry}"
                                Command="hc:ControlCommands.Close"
                                Foreground="{DynamicResource PrimaryTextBrush}"
                                Style="{StaticResource ButtonIcon}" />

                            <Grid Grid.Row="1">

                                <StackPanel>

                                    <hc:TextBox
                                        Margin="15,2"
                                        hc:InfoElement.Placeholder="请输入表名"
                                        hc:InfoElement.Title="表名"
                                        Text="{Binding File.TableName}" />

                                    <hc:TextBox
                                        Margin="15,2"
                                        hc:InfoElement.Placeholder="请输入表名描述"
                                        hc:InfoElement.Title="表名描述"
                                        Text="{Binding File.TableDesc}" />


                                    <hc:TextBox
                                        Margin="15,2,15,0"
                                        hc:InfoElement.Placeholder="上传成功会显示文件名称"
                                        hc:InfoElement.Title="文件名称"
                                        IsReadOnly="True"
                                        Text="{Binding File.FileName, Mode=TwoWay}" />

                                    <StackPanel
                                        Margin="15,15,15,15"
                                        HorizontalAlignment="left"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">

                                        <CheckBox Content="添加字段" IsChecked="{Binding File.IsField}" />
                                        <Button
                                            Width="80"
                                            Margin="20,0,0,0"
                                            Click="UploadButton_Click"
                                            Content="上传文件"
                                            Style="{StaticResource ButtonPrimary}" />

                                        <Button
                                            Width="80"
                                            Margin="20,0,0,0"
                                            Click="TemplateDownloadClick"
                                            Content="下载模板"
                                            Style="{StaticResource ButtonPrimary}" />

                                    </StackPanel>



                                    <StackPanel
                                        Margin="15,0"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">

                                        <Button
                                            Margin="0,0,10,0"
                                            Command="{Binding ClearCommand}"
                                            Content="清空" />

                                        <Button
                                            Grid.Row="1"
                                            Width="100"
                                            Click="Button_Click"
                                            Command="{Binding generateCommand}"
                                            Content="生成"
                                            Style="{StaticResource ButtonSuccess}" />

                                        <Button
                                            Grid.Row="1"
                                            Width="100"
                                            Margin="10,0,0,0"
                                            Click="Button_Click"
                                            Content="取消"
                                            Style="{StaticResource ButtonDanger}" />

                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Border>
                </hc:Drawer>
            </Grid>
        </hc:Watermark>
    </Grid>
</Window>
